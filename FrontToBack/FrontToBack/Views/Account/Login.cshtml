
@model LoginVm
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login Page</h2>
                        <ul>
                            <li>
                                <a asp-controller="home" asp-action="index">Home</a>
                            </li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100 ">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <form  asp-action="login" method="post" >
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label asp-for="UsernameOrEmail">Email or Username</label>
                                    <input asp-for=UsernameOrEmail placeholder="Email or Username" />
                                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="col-lg-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for=Password placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>
                                <div class="col-md-8">
                                    <div class="check-box">
                                        <input asp-for="İsRemember"/>
                                        <label asp-for="İsRemember">Remember me</label>
                                    </div>
                                </div>
                                <div class="col-md-4 pt-1 mt-md-0">
                                    <div class="forgotton-password_info">
                                        <a href="#"> Forgotten password?</a>
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-5">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary" type="submit">
                                        Login
                                    </button>
                                    
                                </div>
                                <div class="col-lg-6 pt-5">
                                    <p>
                                        Don't you have an account? <a class="text-success" asp-action="register" asp-controller="account">Register</a>
                                    </p>
                                   
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</main>