@using FrontToBack.Utilities.Enum;


@model RegisterVm
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading"> Register Page</h2>
                        <ul>
                            <li>
                                <a asp-action="index" asp-controller="Home">Home</a>
                            </li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">   
                <div class="col-lg-6 pt-5 pt-lg-0 ">
                    <form asp-action="register" method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Name">First Name</label>
                                    <input asp-for=Name  placeholder="First Name" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname">Surname</label>
                                    <input asp-for=Surname placeholder="Surname" />
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Username">Username</label>
                                    <input asp-for=Username placeholder="Username" />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Gender">Gender</label>
                                    @foreach (var gender in Enum.GetValues(typeof(Gender)))
                                    {
                                        <div class="d-flex form-check">
                                            <input asp-for="Gender" style="width:20px;height:20px" class="form-check-input" type="radio" value="@gender" id="@gender" />
                                            <label asp-for="Gender" class="form-check-label" for="@gender"> @gender</label>
                                        </div>
                                    }
                                    
                                    <span class="text-danger" asp-validation-for="Gender"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email">Email Address*</label>
                                    <input asp-for=Email placeholder="Email Address" />
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for=Password placeholder="Password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Confirmpassword" >Confirm Password</label>
                                    <input asp-for=Confirmpassword type="password" placeholder="Confirm Password" />
                                    <span class="text-danger" asp-validation-for="Confirmpassword"></span>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary" type="submit">
                                        Register
                                    </button>
                                </div>
                                <div class="col-6">
                                    <p>
                                        Already have an account? <a asp-action="Login" asp-controller="account" class="text-success">
                                            Login
                                        </a>
                                    </p>
                                    
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>