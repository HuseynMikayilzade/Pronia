@model Slide

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create Slide</h4>

        <form class="forms-sample" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" class="form-control" placeholder="Photo">
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=Title>Slide Title</label>
                <input asp-for=Title class="form-control" placeholder="Title">
                <span asp-validation-for="Title" class="text-danger pt-1"></span>
            </div>
            <div class="form-group">
                <label asp-for=subTitle>Slide Subtitle</label>
                <input asp-for=subTitle class="form-control" placeholder="Subtitle">
                <span asp-validation-for="subTitle" class="text-danger pt-1"></span>
            </div>
            <div class="form-group">
                <label asp-for=Desc>Slide Description</label>
                <input asp-for=Desc class="form-control" placeholder="Description">
                <span asp-validation-for="Desc" class="text-danger pt-1"></span>
            </div>
            <div class="form-group">
                <label asp-for=Order>Slide Order</label>
                <input asp-for=Order class="form-control" placeholder="Order">
                <span asp-validation-for="Order" class="text-danger pt-1"></span>
            </div>

            <button type="submit" class="btn btn-primary me-2">Submit</button>
            <a asp-controller="Slide" asp-action="index" class="btn btn-light">Cancel</a>
        </form>
    </div>
</div>