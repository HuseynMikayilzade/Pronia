@model List<Product>

@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"><a asp-action="create" type="button" class="btn btn-success btn-fw">Create Product</a></h4>
                @Html.Raw(TempData["Message"])
                <div class="table-responsive pt-3">
                    <table class="table table-dark text-center">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <td>
                                    Price
                                </td>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img style="width:150px; height:150px" src="~/assets/images/website-images/@item.ProductImages.FirstOrDefault()?.Url">
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Price $
                                    </td>
                                    <td>
                                        <a asp-controller="product" asp-action="update" asp-route-id="@item.Id" type="button" class="btn btn-outline-success btn-fw" alt="update"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-controller="product" asp-action="delete" asp-route-id="@item.Id" type="button" class="btn btn-outline-danger btn-fw" alt="delete"><i class="mdi mdi-delete-sweep"></i></a>
                                        <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id" type="button" class="btn btn-outline-primary btn-fw" alt="more"><i class="mdi mdi-more"></i> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>